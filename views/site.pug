doctype html
html
  head
    title Login
    //- link(rel="stylesheet", href="./site.css")
    style
      include ./site.css
    
  body.app
    div.container
      h1.app__title Virtuos
      p.app__subtitle Show your photos to the entire world!
      div.panel
        h2.panel__title Sign in
        form.form(action="/auth/google")
          label.form__label(for="input-email") email:
          input.form__input(type="email" id="input-email")
          label.form__label(for="input-pass") password:
          input.form__input(type="password" id="input-pass")
          button.form__button(type="submit") login
        <a class="panel__link" href="/auth/google">Google+